<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="menu_font">
		<item name="android:textColor">@color/red</item>
		<item name="android:typeface">serif</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">20sp</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="button_design">
		<item name="android:layout_height">80dp</item>
		<item name="android:layout_width">150dp</item>
		<item name="android:layout_weight">0.17</item>
		<item name="android:layout_margin">5dp</item>
	</style>
	
	<!-- Table button size -->
    <style name="tableButton">
        <item name="android:width">150dp</item>
        <item name="android:height">180dp</item>
        <item name="android:layout_weight">0.17</item>
		<item name="android:layout_margin">5dp</item>
       
    </style>    
	
	<style name="button_design.land">
		<item name="android:textSize">17sp</item>
	</style>

	<style name="button_design.ok">
		<item name="android:layout_height">380dp</item>
		<item name="android:layout_width">250dp</item>
		</style>

	<style name="button_design.prev_next">
		<item name="android:layout_height">60dp</item>
		<item name="android:layout_width">120dp</item>
		<item name="android:layout_weight">0.17</item>
		<item name="android:layout_marginRight">5dp</item>
	</style>

	<style name="menu_font.smaller">
		<item name="android:textSize">20sp</item>
	</style>

	<style name="body_text">
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:typeface">normal</item>
		<item name="android:textSize">20sp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_weight">0.80</item>
		<item name="android:layout_margin">5dp</item>
		<item name="android:layout_gravity">center</item>
	</style>
	
	<style name="body_text.black">
		<item name="android:textColor">@color/black</item>
	</style>
	
	<style name="body_text.smaller">
		<item name="android:typeface">serif</item>
		<item name="android:textSize">15sp</item>
	</style>

	<style name="body_text.end">
		<item name="android:textColor">@color/purple</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:typeface">serif</item>
		<item name="android:textSize">15sp</item>
	</style>

	<style name="background_white">
		<item name="android:background">@color/white</item>
		<item name="android:padding">5dp</item>
	</style>


</resources>